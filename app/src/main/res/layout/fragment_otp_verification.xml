<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/VerifiText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/verification_code"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/VerifiText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/verification_message"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:alpha="0.5"
                            android:background="#ffffff" />

                        <TextView
                            android:id="@+id/tv_first_code"
                            style="@style/NumberCodeText"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:alpha="0.5"
                            android:background="#ffffff" />

                        <TextView
                            android:id="@+id/tv_second_code"
                            style="@style/NumberCodeText"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:alpha="0.5"
                            android:background="#ffffff" />

                        <TextView
                            android:id="@+id/tv_third_code"
                            style="@style/NumberCodeText"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:alpha="0.5"
                            android:background="#ffffff" />

                        <TextView
                            android:id="@+id/tv_fourth_code"
                            style="@style/NumberCodeText"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:alpha="0.5"
                            android:background="#ffffff" />

                        <TextView
                            android:id="@+id/tv_fifth_code"
                            style="@style/NumberCodeText"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:alpha="0.5"
                            android:background="#ffffff" />

                        <TextView
                            android:id="@+id/tv_sixth_code"
                            style="@style/NumberCodeText"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </FrameLayout>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <FrameLayout
                        android:id="@+id/fl_virtual_num_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_virtual_num_1"
                            style="@style/NumberVirtual"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_virtual_num_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_virtual_num_2"
                            style="@style/NumberVirtual"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_virtual_num_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_virtual_num_3"
                            style="@style/NumberVirtual"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="3" />
                    </FrameLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <FrameLayout
                        android:id="@+id/fl_virtual_num_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_virtual_num_4"
                            style="@style/NumberVirtual"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="4" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_virtual_num_5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_virtual_num_5"
                            style="@style/NumberVirtual"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="5" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_virtual_num_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_virtual_num_6"
                            style="@style/NumberVirtual"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="6" />
                    </FrameLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <FrameLayout
                        android:id="@+id/fl_virtual_num_7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_virtual_num_7"
                            style="@style/NumberVirtual"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="7" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_virtual_num_8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_virtual_num_8"
                            style="@style/NumberVirtual"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="8" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_virtual_num_9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_virtual_num_9"
                            style="@style/NumberVirtual"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="9" />
                    </FrameLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"></View>

                    <FrameLayout
                        android:id="@+id/fl_virtual_num_0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_virtual_num_0"
                            style="@style/NumberVirtual"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_virtual_backspace"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:id="@+id/iv_virtual_backspace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_backspace" />
                    </FrameLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_submit_code"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1.5">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="32dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_around_submit" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/tv_submit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/resend"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="32sp" />

                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>